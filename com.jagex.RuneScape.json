{
    "app-id": "com.jagex.RuneScape",
    "runtime": "org.freedesktop.Platform",
    "runtime-version": "19.08",
    "sdk": "org.freedesktop.Sdk",
    "command": "runescape",
    "separate-locales": false,
    "tags": [
        "proprietary"
    ],
    "finish-args": [
        "--share=ipc",
        "--socket=x11",
        "--socket=pulseaudio",
        "--share=network",
        "--device=all",
        "--persist=Jagex"
    ],
    "cleanup": [
        "*.a",
        "*.la"
    ],
    "modules": [
        "shared-modules/gtk2/gtk2.json",
        {
            "name": "openssl",
            "configure-commands":[
                "./Configure --prefix=/app \
                --libdir=/app/lib \
                --openssldir=/app/etc/ssl \
                --with-krb5-flavor=MIT\
                enable-krb5 \
                shared \,
                threads"
            ],
            "cleanup": [
                "/include",
                "/lib/pkgconfig"
            ],
            "sources": [
                {
                    "__comment": "Must be version 1.10",
                    "type": "archive",
                    "url": "https://www.openssl.org/source/openssl-1.0.2t.tar.gz",
                    "sha256": "14cb464efe7ac6b54799b34456bd69558a749a4931ecfd9cf9f71d7881cac7bc"
                },
                {
                    "type": "patch",
                    "path": "openssl-version-script.patch"
                }
            ]
    },
	{
            "name": "runescape",
            "buildsystem": "simple",
            "build-commands": [
                "install apply_extra /app/bin",
                "install runescape.sh /app/bin/runescape",
                "install -Dm644 com.jagex.RuneScape.appdata.xml /app/share/appdata/com.jagex.RuneScape.appdata.xml",
                "cp /usr/bin/ar /app/bin",
                "ARCH_TRIPLE=$(gcc --print-multiarch) && cp /usr/lib/${ARCH_TRIPLE}/libbfd-*.so /app/lib"
            ],
            "sources": [
                {
                    "type": "file",
                    "path": "./scripts/apply_extra.sh",
                    "dest-filename": "apply_extra"
                },
                {
                    "type": "file",
                    "path": "./scripts/runescape.sh",
                    "dest-filename": "runescape.sh"
                },
                {
                    "type": "file",
                    "path": "com.jagex.RuneScape.appdata.xml"
                },
                {
                    "type": "extra-data",
                    "filename": "runescape.deb",
                    "only-arches": [
                        "x86_64"
                    ],
                    "url": "https://content.runescape.com/downloads/ubuntu/pool/non-free/r/runescape-launcher/runescape-launcher_2.2.6_amd64.deb",
                    "sha256": "5968c591e445fae7b5c2d4ab19988828b86ee9aa1fdba7865d99c9683e27b66c",
                    "size": 3894568
                }
            ]
        }
    ]
}
